{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "dist",
    "rewrites": [
      {
        "source": "/support/**",
        "destination": "/index.html"
      },
      {
        "source": "/support",
        "destination": "/index.html"
      },
      {
        "source": "/create",
        "destination": "/index.html"
      },
      {
        "source": "/edit",
        "destination": "/index.html"
      },
      {
        "source": "/manage",
        "destination": "/index.html"
      },
      {
        "source": "/join/**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/createCheckoutSession",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "https://regimentfinder.com"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "GET, POST, OPTIONS"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Content-Type"
          }
        ]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ]
}
